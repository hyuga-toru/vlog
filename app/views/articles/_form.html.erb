<% now = Time.zone.now %>

<%= form_for article do |f| %>
    
<%= render 'layouts/error_messages', model: f.object %></%>
<div class="form-group", article: @article >
    <div id="cover-imge" class="form-group padding-top-15 relative">
        
        <% if article.image_id.present? %>
            <%= image_tag attachment_url(article, :image), class: 'article-image padding-top-15', style: 'max-height: 150px; width: 100%; object-fit: cover' %>
        <% else %>
            <%= image_tag 'gray-bg.jpg', class: 'article-image padding-top-15', style: 'max-height: 150px; width: 100%; object-fit: cover' %>
        <% end %>
        <i class="fa fa-camera"></i>
    </div> 
    <%= f.attachment_field :image %>
</div>      
    <div class="form-group padding-top-15">
        <%= f.label :name, 'タイトル' %>
        <%= f.text_field :name, class: 'form-control' %>
    </div>
    <div class="form-group">
        <%= f.label :place, '場所' %>
        <%= f.text_field :place, class: 'form-control' %>
    </div>
    <div class="form-group">
        <%= f.label :start_time, '開始時間' %>
        <div>
            <%= f.datetime_select :start_time, class: 'form-control' %>
        </div>
    </div>
    <div class="form-group">
        <%= f.label :end_time, '終了時間' %>
        <div>
            <%= f.datetime_select :end_time, class: 'form-control' %>
        </div>
    </div>
    <div class="form-group">
        <%= f.label :content, '本文' %>
        <%= f.text_area :content, size: "20x10", class: 'form-control',  row: 10 %>
    </div>
    <%= f.submit '新規作成', class: "btn-success", style: 'margin-bottom: 10px' %>
<% end %>