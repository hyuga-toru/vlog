<div class="page-header">
    <h1 class="text-center">イベント一覧</h1>
</div>
<div class="container">
    <div class="row">
        <div class="col-md-8 per margin-top-5article-block-2">
            <div id="content_main">
	            <article class="article">
	            <div class="article-info">
		            <% @articles.each do |article| %>
                        <%= link_to article do %>
                            <div class="list-group article-block-2">
                                <figure>
		                            <div class="form-group", article: @article >
                                        
                                                
                                            <% if article.image_id.present? %>
                                                <%= image_tag attachment_url(article, :image) %>
                                            <% else %>
                                                <%= image_tag 'gray-bg.jpg' %>
                                            <% end %>
                                        </div> 
                                    
	                            </figure>
                        
                                    <P class="title center"><%= article.name %></P>
                                    <div class="center">
                                        <span>開催予定日時/<%= article.start_time.strftime("%Y年%m月%d日") %></span>
                                    </div>
                                    <p class="list-group-item-text"></p>
                                
                            </div>
                        <% end %>
                    <% end %>
                    <div class="center">
                        <%= paginate @articles %>
                    </div>
	            </div>
        </article>
    </div>		
</div>

<div class="container">
    <div class="row">
        <div class="col-md-4">
            <p class="text-right">
                <%= render 'calender', article: @article %>
            </p>
        </div>
    </div>
</div>


  
        

        


